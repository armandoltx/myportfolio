<div class="inner cover">
  <h1 class="cover-heading">Tech News</h1>
  <div class="row">
    <% @tweets.each do |tweet| %>
      <div class="col-md-6">
        <div class="tech-news">
          <div class="card">
            <%= tweet %>
            <%= twitter_parser(tweet) %><!-- it is a helper created in pages_helper to make links clickable -->
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>